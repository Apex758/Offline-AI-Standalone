{
  "name": "oecs-learning-hub",
  "version": "1.0.0",
  "description": "OECS Learning Hub - AI-powered educational tools suite",
  "main": "electron/main.js",
  "author": {
    "name": "Delon Pierre",
    "email": "delon.pierre@oecs.int"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "backend": "cd backend && python -m uvicorn main:app --reload --port 8000",
    "electron:dev": "concurrently \"npm run backend\" \"wait-on http://localhost:8000 && npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "echo Backend packaging skipped - already done manually",
    "build": "npm run build:frontend && npm run build:backend",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win --x64",
    "electron:build:portable": "npm run build && electron-builder --win portable",
    "package": "npm run build && electron-builder --win --x64",
    "postinstall": "cd frontend && npm install"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7",
    "react-calendar": "^6.0.0",
    "react-router-dom": "^7.9.4"
  },
  "devDependencies": {
    "app-builder-bin": "^4.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "28.3.3",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.oecs.learninghub",
    "productName": "OECS Learning Hub",
    "files": [
      "frontend/dist/**/*",
      "electron/**/*",
      "package.json",
      "!**/*.md",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend-bundle",
        "filter": ["**/*", "!**/__pycache__/**", "!**/*.pyc", "!**/venv/**", "!**/.venv/**", "!chat_history.json", "!lesson_plan_history.json", "!data/**"]
      },
      {
        "from": "frontend/dist/splashscreen",
        "to": "splashscreen",
        "filter": ["**/*"]
      },
      {
        "from": "frontend/src/data",
        "to": "frontend/src/data",
        "filter": ["**/*.json"]
      }
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,  
      "include": "build/installer.nsh"
    },
    "directories": {
      "output": "dist-electron"
    },
    "win": {
      "icon": "build/OECS.ico",
      "target": ["nsis"]
    }
  }
}